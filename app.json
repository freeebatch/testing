{
  "name": "Shivaay Telegram Bot",
  "description": "Telegram Bot using Pyrogram - deploy easily on Heroku",
  "repository": "https://github.com/freeebatch/testing",
  "logo": "https://raw.githubusercontent.com/Shivaay20005/Cobra-exx-main/main/logo.png",
  "keywords": [
    "telegram",
    "bot",
    "pyrogram",
    "heroku"
  ],
  "stack": "heroku-22",
  "env": {
    "API_ID": {
      "description": "Telegram API ID (get it from https://my.telegram.org)",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash (get it from https://my.telegram.org)",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token (from @BotFather)",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Bot username (without @)",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID (bot owner/admin)",
      "required": true
    },
    "SUDO_USERS": {
      "description": "Comma-separated list of sudo user IDs (optional)",
      "required": false
    },
    "CHANNEL_ID": {
      "description": "Telegram channel ID (usually starts with -100)",
      "required": true
    }
  },
  "addons": [],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ]
}
